#requireResourcesForContext("jira.admin")

<!DOCTYPE html>
<html>
<head>
    <title>WMPR Requests Settings</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="decorator" content="atl.admin">
    
    ## Load the web resources explicitly
    $webResourceManager.requireResource("com.scriptrunnerhq.vendors-api.backend:wmpr-settings-resources")
    $webResourceManager.requireResource("com.atlassian.auiplugin:ajs")
    $webResourceManager.requireResource("com.atlassian.plugins.jquery:jquery")
    
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
            background-color: #f4f5f7;
            margin: 0;
            padding: 20px;
        }
        
        .settings-container {
            max-width: 1200px;
            margin: 0 auto;
            background: white;
            border-radius: 3px;
            box-shadow: 0 1px 2px rgba(9, 30, 66, 0.25);
            min-height: 500px;
        }
        
        .loading-state {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 300px;
            color: #5e6c84;
        }
        
        /* Basic Atlaskit-like styles for fallback */
        .wmpr-form {
            padding: 24px;
        }
        
        .wmpr-field {
            margin-bottom: 16px;
        }
        
        .wmpr-label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: #172b4d;
        }
        
        .wmpr-input {
            width: 100%;
            padding: 8px 12px;
            border: 1px solid #dfe1e6;
            border-radius: 3px;
            font-size: 14px;
        }
        
        .wmpr-button {
            background: #0052cc;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 3px;
            cursor: pointer;
            font-size: 14px;
            margin-right: 8px;
        }
        
        .wmpr-button:hover {
            background: #0043a8;
        }
        
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
    <header id="header" role="banner">
        #parse("/templates/decorators/includes/header.vm")
    </header>

    <section id="content" role="main">
        <div class="aui-page-panel">
            <div class="aui-page-panel-inner">
                <section class="aui-page-panel-content">
                    <header class="aui-page-header">
                        <div class="aui-page-header-inner">
                            <div class="aui-page-header-main">
                                <h1>WMPR Requests Settings</h1>
                                <p class="aui-page-header-description">Configure the JQL query used to fetch WMPR requests for display.</p>
                            </div>
                        </div>
                    </header>

                    <div class="settings-container">
                        <div id="wmpr-settings-container">
                            <!-- Fallback content while React loads -->
                            <div class="loading-state">
                                <div>
                                    <div style="text-align: center;">
                                        <div style="width: 40px; height: 40px; border: 4px solid #f3f3f3; border-top: 4px solid #0052cc; border-radius: 50%; animation: spin 1s linear infinite; margin: 0 auto 16px;"></div>
                                        <p>Loading WMPR Settings...</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </section>

    <!-- Ensure AJS is available -->
    <script type="text/javascript">
        // Set up proper context path
        window.contextPath = '$req.contextPath';
        
        // Ensure AJS is available for context path
        if (typeof AJS === 'undefined') {
            window.AJS = { 
                contextPath: function() { 
                    return window.contextPath || '$req.contextPath'; 
                } 
            };
        } else {
            // Override AJS context path if needed
            AJS.contextPath = function() {
                return window.contextPath || '$req.contextPath';
            };
        }
        
        // Debug logging
        console.log('WMPR Settings page loaded');
        console.log('Context path:', window.contextPath);
        console.log('AJS context path:', (typeof AJS !== 'undefined' ? AJS.contextPath() : 'AJS not available'));
        
        // Wait for DOM and try to initialize
        function initializeWMPRSettings() {
            console.log('Attempting to initialize WMPR Settings...');
            
            if (typeof window.WMPRSettings !== 'undefined' && window.WMPRSettings.mount) {
                console.log('Mounting WMPR Settings component');
                window.WMPRSettings.mount();
            } else {
                console.log('WMPRSettings not ready, checking again in 1 second...');
                setTimeout(initializeWMPRSettings, 1000);
            }
        }
        
        // Try multiple initialization methods
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initializeWMPRSettings);
        } else {
            setTimeout(initializeWMPRSettings, 100);
        }
        
        // Also try when AJS is ready
        if (typeof AJS !== 'undefined') {
            AJS.toInit(initializeWMPRSettings);
        }
        
        // Fallback - try again after a longer delay
        setTimeout(function() {
            if (document.getElementById('wmpr-settings-container').querySelector('.loading-state')) {
                console.log('React component still not loaded after 5 seconds, checking resources...');
                console.log('Available global objects:', Object.keys(window).filter(k => k.includes('WMPR')));
            }
        }, 5000);
    </script>

</body>
</html> 